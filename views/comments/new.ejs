<% include ../partials/header %>
<div class="container">
    <div class="animated slideInRight row">
        <h1 class="text-center">Add a new comment!</h1>
        <div class="form-style">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name ="comment[text]" placeholder="Type your comment"></input>   
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name ="comment[author]" placeholder="Author"></input>   
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            <a href="/campgrounds">Back to campgrounds</a>
        </form>  
        </div>
    </div>

</div>