<% include ../partials/header %>
<div class="container">
    <div class="animated slideInRight row">
        <h1 class="text-center">Create new food!</h1>
        <div class="form-style">
        <form action="/foods" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name ="name" placeholder="New Food"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name ="price" placeholder="Total Price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Describe it"></input>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            <a href="/campgrounds">Back to foods</a>
        </form>
        </div>
    </div>

</div>
