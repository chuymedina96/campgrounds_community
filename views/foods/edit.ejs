<% include ../partials/header %>
<div class="container">
    <div class="animated slideInRight row">
        <h1 class="text-center">Edit <%= food.name %></h1>
        <div class="form-style">
        <form action="/foods/<%= food._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name ="food[name]" value="<%= food.name %>"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="food[image]" value="<%= food.image %>"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="food[description]" value="<%= food.description %>"></input>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            <a href="/foods">Back to Browsing foods</a>
        </form>
        </div>
    </div>

</div>
