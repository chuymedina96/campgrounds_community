<% include ../partials/header %>
<div class="container">
    <div class="animated slideInRight row">
        <h1 class="text-center">Edit <%= food.name %></h1>
        <div class="form-style">
        <form action="/foods/<%= food._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name ="name" value="<%= food.name %>"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name ="price" value="<%= food.price %>" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= food.location %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= food.image %>"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= food.description %>"></input>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            <a href="/foods">Back to Browsing Food!</a>
        </form>
        </div>
    </div>

</div>
