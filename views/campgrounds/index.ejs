<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="most header-title text-center">Our most popular food</h1>
        </div>
        <% if(currentUser){ %>
        <div class="most container text-center">
          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add New Food</button>
        </div>
        <% } %>
    </div>
    <div class="row animated fadeInUp" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail text-center">
                    <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>"></img>
                    <div class="caption">
                        <h4 class="header-title"><%= campground.name %></h4>
                    </div>

                </div>
                </a>
            </div>
        <% }); %>
    </div>
</div>
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 class="text-center header-title">Add Food</h3>
        </div>
        <div class="modal-body">
              <div class="row">
                  <div class="form-style text-center">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name ="name" placeholder="Title"></input>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="Image URL"></input>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="Description"></input>
                        </div>
                    </form>
                  </div>
                  <div class="col-md-12 text-center">
                    <button class="btn btn-lg btn-primary">Submit</button><br/><br/>
                    <a href="#" data-dismiss="modal">Back to campgrounds</a>
                  </div>
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
