<% include ../partials/header %>
<div class="container animated bounceIn">
    <header class="jumbotron">
        <div class="container text-center animated fadeInRightBig">
        <h1>Welcome to YelpCamp</h1>
        <p>View our hand picked campground from all over the world!</p>
        <p>
            <a class="btn btn-primary" href="/campgrounds/new">Add a new campground here!</a>
        </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12 animated flipInX">
            <h1>Our most popular campgrounds</h1>
        </div>
    </div>
    <div class="row animated fadeInUpBig" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail text-center">
                    <img src="<%= campground.image %>"></img>
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info!</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
