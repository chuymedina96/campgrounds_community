<% include ../partials/header %>
<div class="container animated fadeIn">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group animated fadeInLeftBig">
                <li class="list-group-item active">Info one</li>
                <li class="list-group-item">Info two</li>
                <li class="list-group-item">Info three</li>
                <li class="list-group-item">Info three</li>
            </div>
        </div>
        <div class="col-md-9 animated fadeInRightBig">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>"/>
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <h3><%= campground.description %></h3>
                </div>
            </div>
            <div class="well">
              <div class="text-right">
                <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a new comment</a>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#commentModal">Add a new comment</button>
              </div>
              <hr>
              <% campground.comments.forEach(function(comment){ %>
                      <div class="row">
                        <div class="col-md-12">
                              <strong><%= comment.author %></strong>
                              <span class="pull-right">
                                <p>10 days ago</p>
                              </span>
                              <p>
                                <%= comment.text %>
                              </p>
                        </div>

                      </div>
              <% }); %>
            </div>
        </div>
    </div>
</div>
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="commentModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <div class="jumbotron">
          <div class="container">
              <div class="animated slideInRight row">
                  <h1 class="text-center">Add a new comment!</h1>
                  <div class="form-style">
                  <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                      <div class="form-group">
                          <input class="form-control" type="text" name ="comment[text]" placeholder="Type your comment"></input>
                      </div>
                      <div class="form-group">
                          <input class="form-control" type="text" name ="comment[author]" placeholder="Author"></input>
                      </div>
                      <button class="btn btn-lg btn-primary btn-block">Submit</button>
                      <a href="/campgrounds">Back to campgrounds</a>
                  </form>
                  </div>
              </div>

          </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
